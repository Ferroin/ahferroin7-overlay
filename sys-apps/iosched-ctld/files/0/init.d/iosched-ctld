# $Header: $

depend() {
    need localmount sysfs
}

start() {
    ebegin "Starting iosched-ctld"
    start-stop-daemon --start --exec /usr/sbin/iosched-ctld --pidfile /run/iosched-ctld.pid --interpreted --background --make-pidfile
    eend $?
}

stop() {
    ebegin "Stopping iosched-ctld"
    start-stop-daemon --stop --exec /usr/sbin/iosched-ctld --pidfile /run/iosched-ctld.pid --interpreted
    eend $?
}
